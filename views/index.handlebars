<img src="assets/burger.png" alt="Burger image">

<h1>Eat the Burger</h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <ul>
        {{#each burgers}} {{#unless devoured}} <li>{{burger_name }} </li>{{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-sm">
      <ul>
        {{#each burgers}} {{#if devoured}} <li>{{burger_name}}</li> {{/if}} {{/each}}
      </ul>
    </div>
    </div>

    <div class="row">
      <div id= "burger-form">
      <form class="create-form">

        <div class="form-group">

          <input type="text" id="ca" name="name">
        </div>

        <!-- this form group is not needed later -->
        <div class="form-group">
          <label for="devoured">Add to: </label>
          <br>
          <input type="radio" name="devoured" value="1" checked> Already ate
          <br>
          <input type="radio" name="devoured" value="0"> Ready to eat
        </div>

        <button type="submit">Submit</button>
      </form>
      </div>
    </div>
  </div>